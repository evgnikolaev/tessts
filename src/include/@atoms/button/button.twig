{% if button.not_interactive %}
    <div class="button button--not-interactive{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.icon %} button--has-icon{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}">
        {% if button.text %}
            <span class="button__text">{{ button.text }}</span>
        {% endif %}
        {% if button.icon %}
            <span class="button__icon">
				{% view '@icon' with {
                    icon: button.icon
                } %}
			</span>
        {% endif %}
    </div>
{% else %}
    {% if button.href %}
        <a href="{{ button.href }}" class="button{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.icon %} button--has-icon{% endif %}{% if button.disabled %} button--disabled{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}>
            {% if button.text %}
                <span class="button__text">{{ button.text }}</span>
            {% endif %}
            {% if button.icon %}
                <span class="button__icon">
				{% view '@icon' with {
                    icon: button.icon
                } %}
			</span>
            {% endif %}
        </a>
    {% else %}
        <button type="{{ button.type?: 'button' }}"
                class="button{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button--{{ button.size }}{% endif %}{% if button.theme %} button--{{ button.theme }}{% endif %}{% if button.icon %} button--has-icon{% endif %}{{ button.fit ? " button--fit" : "" }}{{ button.mobFit ? " button--mob-fit" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}{% if button.disabled %} disabled{% endif %}>
            {% if button.text %}
                <span class="button__text">{{ button.text }}</span>
            {% endif %}
            {% if button.icon %}
                <span class="button__icon">
				{% view '@icon' with {
                    icon: button.icon
                } %}
			</span>
            {% endif %}
        </button>
    {% endif %}
{% endif %}

