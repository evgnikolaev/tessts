<div class="subscribe">
	<div class="subscribe__container container">
		<div class="subscribe__inner">
			{% if subscribe.heading %}
				<div class="subscribe__heading">
					<h2>{{ subscribe.heading }}</h2>
				</div>
			{% endif %}
			<div class="subscribe__content">
				{% if subscribe.text %}
					<div class="subscribe__text">
						<p class="text-default">{{ subscribe.text }}</p>
					</div>
				{% endif %}
				<form{% if subscribe.form.id %} id="{{ subscribe.form.id }}" class="subscribe__form"{% endif %}{% if subscribe.form.method %} method="{{ subscribe.form.method }}" {% endif %}{% if subscribe.form.action %} action="{{ subscribe.form.action }}"{% endif %}{% if subscribe.form.name %} name="{{ subscribe.form.name }}"{% endif %}
						data-parsley-validate{% if subscribe.form.attr %} {{ subscribe.form.attr }}{% endif %}>
					<div class="subscribe__field">
						{% if subscribe.form.field %}
							{% view '@field' with {
								field: subscribe.form.field
							} %}
						{% endif %}
						{% if subscribe.form.button %}
							{% view '@button' with {
								button: subscribe.form.button
							} %}
						{% endif %}
					</div>
					{% if subscribe.form.checkbox %}
						<div class="subscribe__checkbox">
							{% view '@field' with {
								field: subscribe.form.checkbox
							} %}
						</div>
					{% endif %}
				</form>
			</div>
		</div>
	</div>
	{% if subscribe.image %}
		<div class="subscribe__image">
			{% view '@image-adaptive' with {
				image_adaptive: subscribe.image
			} %}
		</div>
	{% endif %}
</div>
