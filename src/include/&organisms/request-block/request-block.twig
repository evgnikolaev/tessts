<div class="request-block">
	<div class="request-block__inner">
		<div class="container">
			<div class="request-block__content">
				{% if block.heading %}
					<h2 class="request-block__heading">{{ block.heading }}</h2>
				{% endif %}
				{% if block.text %}
					<div class="request-block__text">
						<p class="text-default color-white">{{ block.text }}</p>
					</div>
				{% endif %}
				{% if block.action %}
					<div class="request-block__action">
						{% view '@button' with {
							button: block.action
						} %}
					</div>
				{% endif %}
			</div>
		</div>
		{% if block.image %}
			<div class="request-block__image">
				{% view '@image-adaptive' with {
					image_adaptive: block.image
				} %}
			</div>
		{% endif %}
	</div>
</div>
