<div class="factors-block">
    <div class="container">
        {% if block.text %}
            <div class="factors-block__top">
                <h2 class="factors-block__heading h1">{{ block.heading }}</h2>
            </div>
        {% endif %}
        <div class="factors-block__content">
            {% if block.text %}
                <div class="factors-block__text">{{ block.text }}</div>
            {% endif %}
            {% if block.factors %}
                <div class="factors-block__items">
                    {% for factor in block.factors %}
                        <div class="factors-block__item">
                            {% view "@factor" %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>