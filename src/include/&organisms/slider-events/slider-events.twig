<div class="slider-events" data-slider-events>
	<div class="slider-events__inner">
		<div class="slider-events__container">
			<div class="swiper-container" data-slider>
				<div class="swiper-wrapper">
					{% for items in slider.slides|batch(3) %}
						<div class="swiper-slide slider-events__slide">
							<div class="slider-events__group">
								{% for item in items %}
									<div class="slider-events__row">
										{% view '^event-row' with {
											card: item
										} %}
									</div>
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	{% if slider.slides|length > 3 %}
		<div class="slider-events__arrows container">
			{% view '@nav-arrows' %}
		</div>
	{% endif %}
</div>

<div class="slider-events slider-events--mob" data-slider-events-mob>
	<div class="slider-events__inner">
		<div class="slider-events__container">
			<div class="swiper-container" data-slider>
				<div class="swiper-wrapper">
					{% for slide in slider.slides %}
						<div class="swiper-slide slider-events__slide">
							{% view '^event-row-mob' with {
								card: slide
							} %}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>

		{% if slider.slides|length > 1 %}
			<div class="slider-events__pagination">
				<div class="swiper-pagination"></div>
			</div>
		{% endif %}
	</div>
</div>
